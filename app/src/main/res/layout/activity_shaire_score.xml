<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backgroung2"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tlay"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Buttom text"
            android:id="@+id/editText2"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/go"
            android:layout_margin="5dp"
            android:background="@drawable/buttoncirc"
            android:text="TRY"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/blay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:weightSum="2">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/save"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/buttoncirc"
            android:text="SAVE"/>
        <Button
            android:layout_margin="5dp"
            android:background="@drawable/buttoncirc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/share"
            android:layout_weight="1"
            android:text="SHARE"/>
    </LinearLayout>
    <RelativeLayout
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/blay"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tlay">
    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="5dp"
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/blay"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tlay">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:background="@drawable/entry"
            android:scaleType="fitXY" />
        <ImageView
            android:id="@+id/image"
            android:layout_width="200dp"
            android:layout_height="78dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo2" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:text="user score is \n 251"
            android:textColor="#000000"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="Buyyom text"
            android:textColor="#000000"
            android:textSize="40dp" />
    </RelativeLayout>

</RelativeLayout>
