<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.sam.myapplication.PSSActivity"
    android:background="@drawable/entry"
    tools:ignore="Deprecated">

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="350dp"
        android:layout_height="131dp"

        android:layout_alignStart="@+id/btn_settings"

        android:layout_x="5dp"
        android:layout_y="0dp"
        android:background="@drawable/logo2" />


    <Button
        android:id="@+id/btn_play"
        android:layout_width="108dp"
        android:layout_height="95dp"
        android:layout_alignTop="@+id/btn_settings"

        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/btn_settings"
        android:layout_x="127dp"
        android:layout_y="135dp"
        android:background="@drawable/play2"
        android:gravity="center" />

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="62dp"
        android:layout_height="63dp"
        android:layout_x="151dp"
        android:layout_y="237dp"
        android:background="@drawable/settings" />

    <Button
        android:id="@+id/btn_score"
        android:layout_width="62dp"
        android:layout_height="58dp"
        android:layout_x="56dp"
        android:layout_y="281dp"
        android:background="@drawable/score2" />

    <Button
        android:id="@+id/btn_share"
        android:layout_width="62dp"
        android:layout_height="59dp"
        android:layout_x="241dp"
        android:layout_y="282dp"
        android:background="@drawable/share" />





</AbsoluteLayout>
